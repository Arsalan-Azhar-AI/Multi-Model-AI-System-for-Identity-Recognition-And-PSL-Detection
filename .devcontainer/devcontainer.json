{
  "name": "Scaleable PSL",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [8080, 5000],
  "postCreateCommand": "pip install -r requirements.txt",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/kubectl:1": {},
    "ghcr.io/devcontainers/features/helm:1": {},
    "ghcr.io/devcontainers/features/minikube:1": {}
  },
  "mounts": ["source=${localWorkspaceFolder}/data,target=/workspace/data,type=bind"]
}
